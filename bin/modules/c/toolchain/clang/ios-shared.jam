					isysroot = $(developerRoot)/Platforms/iPhoneOS.platform/Developer/SDKs/iPhoneOS7.1.sdk ;
					sdkroot = iphoneos7.1 ;
					architecture = armv7 ;
					minimumVersion = 6.0 ;

