rule GenFile PARENT : TARGET : COMMAND : DEPS
{
	local _t = [ C.GristFiles $(PARENT) : $(TARGET) ] ;
	local _s = $(COMMAND) ;

	Depends $(_t) : $(_s[1]) $(COMMAND[2-]) ;
	GenFile1 $(_t) : $(_s[1]) $(COMMAND[2-]) ;
	Clean clean : $(_t) ;
}

rule GenFile1
{
	MakeLocate $(<) : $(LOCATE_SOURCE) ;
	SEARCH on $(>) = $(SEARCH_SOURCE) ;
}

actions GenFile1
{
	"$(>[1])" "$(<)" "$(>[2-])"
}

